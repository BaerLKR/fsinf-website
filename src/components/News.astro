---
import { getCollection } from 'astro:content';
import FormattedDate from './FormattedDate.astro';

const news = await getCollection('news');

// Sort news after date and then limit them to 3. We don't want to show more then
// the last 3 most recent posts on the front page.
const sortedNews = news.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()).slice(0, 3);
---

<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 justify-center w-full">
  {sortedNews.map((item) => (
    <div class="flex flex-col w-full h-auto rounded-3xl bg-white dark:bg-gray-800 border border-sm border-gray-200 dark:border-gray-700">
      <!-- Image Section -->
      <a href={`/news/${item.slug}/`}>
        <img
          class="rounded-t-lg w-full h-48 object-cover"
          src={item.data.heroImage}
          alt={item.data.title}
        />
      </a>
      <!-- Text Section -->
      <div class="p-4 flex-grow flex flex-col justify-between text-center">
        <!-- Title -->
        <a href={`/news/${item.slug}/`}>
          <h5 class="mb-2 font-bold text-lg tracking-tight text-gray-900 dark:text-white">
            {item.data.title}
          </h5>
        </a>
        <!-- Date Section -->
        <p class="font-bold text-xs text-gray-400 dark:text-gray-300 mb-2">
          <FormattedDate date={item.data.pubDate} />
        </p>
        <!-- Description -->
        <p class="mb-4 text-base font-normal text-gray-700 dark:text-gray-100">
          {item.data.description}
        </p>
        <!-- Link -->
        <div class="flex justify-center mt-auto">
          <a
            href={`/news/${item.slug}/`}
            class="px-3 py-1 text-sm text-center text-white dark:text-gray-100 bg-blue-500 dark:bg-blue-600 hover:text-gray-300 hover:dark:text-gray-400 focus:ring-4 focus:outline-none focus:text-gray-400 focus:dark:text-gray-400 focus:ring-gray-300 dark:hover:ring-gray-400 rounded-lg"
          >
            weiterlesen
          </a>
        </div>
      </div>
    </div>
  ))}
</div>
