---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import Calendar from '../components/Calendar';
---

<!doctype html>
<html lang="de">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main class="container mx-auto p-4">
			<h2>Kalender</h2>

			<Calendar client:load/>

			<div id="popup" 
				class="fixed hidden bg-white border border-gray-200 dark:bg-gray-800 dark:border-gray-700 rounded-md sm:rounded-lg lg:rounded-xl w-10/12 sm:w-3/5 lg:w-1/3 top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 z-10">
				<div class="flex flex-col gap-1 p-4">
					<div class="p-2 flex flex-row justify-between w-full align-middle">
						<div id="popup-title" class="text-xl text-back dark:text-white font-semibold">Title</div>
						<button id="popup-close-btn" class="hover:border-gray-300 hover:dark:bg-gray-900 rounded-full w-8 h-8 items-center" aria-label="Close">X</button>
					</div>
					<div class="p-2 pb-4 flex flex-row justify-between">
						<i id="popup-date">Date</i>
					</div>
					<div class="p-2 pb-4">
						<div id="popup-description">Description</div>
					</div>
				</div>
			</div>
			<script src="../scripts/calendar_popup.js"></script>
		</main>
		<Footer />
	</body>
</html>
