---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';

const posts = (await getCollection('wiki')).sort(
	(a, b) => a.data.ordinal - b.data.ordinal
);
---

<!doctype html>
<html lang="de">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<section class="w-full">
				<ul class="grid grid-flow-row grid-cols-1 sm:grid-cols-2 gap-5 gap-y-6 list-none justify-center">
					{posts.map((post) => (
						<li class="flex flex-col w-full h-auto rounded-3xl bg-white dark:bg-gray-800 border border-m border-gray-200 dark:border-gray-700">
							<!-- Cover image -->
							<a class="hover:no-underline" href={`/wiki/${post.slug}/`}>
								<img class="m-0 p-0 w-full h-[300px] max-h-[300px] rounded-2xl rounded-b-none object-cover" width={720} height={300} src={post.data.heroImage} alt="" />
							</a>
							<div class="flex-grow flex flex-col justify-center p-2">
								<!-- Title and description -->
        						<a href={`/news/${post.slug}/`}>
									<h4 class="font-bold m-1 text-2xl tracking-tight">{post.data.title}</h4>
								</a>
								<p class="font-bold text-gray-400 dark:text-gray-300 mb-4 mt-1">
									<i>{post.data.description}</i>
								</p>
							</div>
						</li>
					))}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
